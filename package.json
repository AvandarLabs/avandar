  "private": true,
  "version": "0.7.9-dev",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "./scripts/startAvandar.sh",
    "dev:email": "dotenv -e .env.development -- email dev --dir shared/emails",
    "deploy:dev-fanout-server": "fly deploy --config packages/dev-fanout-server/fly.production.toml",
    "test": "npm run test:frontend && npm run test:ava-cli && npm run test:dev-fanout-server",
    "test:frontend": "vitest run --exclude \"packages/**\"",
    "test:ava-cli": "npm run -w @avandar/ava-cli test",
    "test:dev-fanout-server": "npm run -w @avandar/dev-fanout-server test",
    "build": "tsc -b && vite build",
    "build:ava-cli": "npm run -w @avandar/ava-cli build && npm link -w @avandar/ava-cli",
    "lint": "eslint .",
    "type-check": "tsc -b --noEmit",
    "preview": "vite preview",
    "tsc-watch": "scripts/tsc-watch.sh",
    "db:apply-migrations": "./scripts/applyMigrations.sh",
    "db:create-user": "npm run vite-script scripts/createUserScript.ts",
    "db:delete-user": "./scripts/db/delete-user/delete-user.sh",
    "db:gen-types": "supabase gen types typescript --local > shared/types/database.types.ts",
    "db:new-migration": "bash -c 'supabase stop && PGSSLMODE=disable supabase db diff -f \"$1\"' --",
    "db:down-migration": "./scripts/downMigration.sh",
    "db:redo-migration": "./scripts/redoLastMigration.sh --gen-types",
    "db:reset": "supabase start && ./scripts/resetDatabase.sh",
    "db:seed": "supabase start && npm run vite-script scripts/seedDatabaseScript.ts",
    "db:sql": "PGPASSWORD=postgres psql -d postgres -U postgres -h 127.0.0.1 -p 54322",
    "db:sql-cmd": "PGPASSWORD=postgres psql -d postgres -U postgres -h 127.0.0.1 -p 54322 -c",
    "env:reset": "cp .env.example .env.development && cp .env.example.edge .env.development.edge",
    "email:send-email": "./scripts/emails/send-transactional-email/send-transactional-email.sh",
    "email:send-notification": "./scripts/emails/send-notification-email/send-notification-email.sh",
    "new:component": "./scripts/newComponent.sh",
    "new:model": "./scripts/newModel.sh",
    "new:route": "./scripts/generators/new-route/new-route.sh",
    "new:script": "./scripts/newScript.sh",
    "new:fn": "./scripts/edge-functions/newEdgeFunction.sh",
    "fns:call": "./scripts/edge-functions/callFunction.sh",
    "fns:update-env": "cp .env.development.edge supabase/functions/.env",
    "fns:serve": "supabase functions serve",
    "vite-script": "./scripts/utils/run-vite-script.sh",
    "util:get-current-version": "./scripts/utils/get-current-version.sh",
    "util:get-project-root": "./scripts/utils/get-project-root.sh"
  },
  "//comments:dependencies": {
    "@polar-sh/sdk": "Added for Deno type-checking in Supabase edge functions",
    "apache-arrow": "This needs to be the same version of apache-arrow used by duckdb-wasm."
